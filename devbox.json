{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "mdformat@latest",
    "dprint@latest",
    "ruff@latest",
    "uv@latest"
  ],
  "env": {
    "UV_PYTHON_INSTALL_DIR": "$PWD/.local/share/uv/python",
    "UV_MANAGED_PYTHON": "1"
  },
  "shell": {
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "mypy": [
        "uv run mypy ${@:-.}"
      ],
      "format": [
        "ruff format ${@:-.}"
      ],
      "check": [
        "ruff check ${@:-.}"
      ],
      "mdformat": [
        "mdformat ${@:-.}"
      ],
      "freeze": [
        "uv export --locked --format requirements-txt --no-dev --no-install-project --output-file requirements.txt"
      ],
      "build": [
        "uv build --wheel"
      ],
      "docker-build": [
        "docker buildx bake -f docker-compose.yml -f docker-compose.dev.yml"
      ],
      "clear": [
        "rm -r dist .venv .local"
      ],
      "run": [
        "uv run pool-exporter"
      ]
    }
  }
}
